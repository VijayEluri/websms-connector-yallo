<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.rothconsulting.android.websms.connector.yallo" android:versionCode="14" android:versionName="1.4">
	<application android:label="@string/app_name" android:icon="@drawable/icon" android:debuggable="false">

		<!--
			This Activity is brought by the WebSMS Connector Plugin API. It shows
			a simple information about this connector when launching it via
			"open" button from android market.
		-->
		<activity android:name="de.ub0r.android.websms.connector.common.InfoActivity"
			android:label="@string/app_name" android:icon="@drawable/icon"
			android:theme="@android:style/Theme.Translucent.NoTitleBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.INFO" />
			</intent-filter>
		</activity>
		
		<!-- Service doing all the IO. -->		
		<service android:name="de.ub0r.android.websms.connector.common.ConnectorService"
			android:exported="false" />

		<!-- PreferenceScreen. -->
		<activity android:name="Preferences">
			<intent-filter>
				<action android:name="com.rothconsulting.android.websms.connector.yallo.PREFS" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		
		<!-- BroadcastReceiver listening for messages from WebSMS GUI. -->
		<receiver android:name="com.rothconsulting.android.websms.connector.yallo.ConnectorYallo"
			android:enabled="true" android:exported="true">
			<intent-filter>
				<action android:name="com.rothconsulting.android.websms.connector.yallo.RUN_BOOTSTRAP" />
				<action android:name="com.rothconsulting.android.websms.connector.yallo.RUN_UPDATE" />
				<action android:name="com.rothconsulting.android.websms.connector.yallo.RUN_SEND" />
				<action android:name="de.ub0r.android.websms.connector.UPDATE" />
			</intent-filter>
		</receiver>
	</application>
	<uses-sdk android:minSdkVersion="7" android:targetSdkVersion="15" />
	<supports-screens android:largeScreens="true"
		android:normalScreens="true" android:smallScreens="true"
		android:anyDensity="true" />
	<!-- INTERNET needed for sending sms via internet. -->
	<uses-permission android:name="android.permission.INTERNET" />
	<!-- WAKE_LOCK needed to make sure, sms are send even if user sends device to sleep. -->
	<uses-permission android:name="android.permission.WAKE_LOCK" />
</manifest> 
